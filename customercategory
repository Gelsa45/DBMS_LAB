CREATE TABLE customer_balance (
    CID NUMBER(5) NOT NULL PRIMARY KEY,
    bal NUMBER(10)
);

INSERT INTO customer_balance(CID, bal) VALUES (6901, 10340);
INSERT INTO customer_balance(CID, bal) VALUES (6950, 7830);
INSERT INTO customer_balance (CID, bal) VALUES (7001, 45000);
INSERT INTO customer_balance (CID, bal) VALUES (8756, 6900);
INSERT INTO customer_balance (CID, bal) VALUES (4200, 500);
INSERT INTO customer_balance (CID, bal) VALUES (6902, 1200);

SET SERVEROUTPUT ON;

DECLARE
    input_cid NUMBER := &input_cid;  -- Take CID as input from the user
    balance NUMBER;
    category VARCHAR2(10);

    -- Function to categorize customer based on balance
    FUNCTION categorize_customer(bal IN NUMBER) RETURN VARCHAR2 IS
        category VARCHAR2(10);
    BEGIN
        IF bal <= 10000 THEN
            category := 'Silver';
        ELSIF bal <= 50000 THEN
            category := 'Gold';
        ELSE
            category := 'Platinum';
        END IF;

        RETURN category;
    END;

BEGIN
    -- Retrieve balance for the given CID
    SELECT bal INTO balance
    FROM customer_balance
    WHERE CID = input_cid;

    -- Display the category for the given CID
    category := categorize_customer(balance);
    DBMS_OUTPUT.PUT_LINE('CID: ' || input_cid || ', Balance: ' || balance || ', Category: ' || category);

EXCEPTION
    WHEN NO_DATA_FOUND THEN
        DBMS_OUTPUT.PUT_LINE('No customer found with CID: ' || input_cid);
END;
/
